{% extends "_layout" %}

{% set entries = craft.entries.section('news').limit(4) %}



{% block content %}
	<section>
		<div class="container-fluid">
			<div class="row">
				<div class="col">
					<h1 class="page-title title--center" data-aos="fade-up">{{ entry.titre }}</h1>
				</div>
			</div>
		</div>
		<div class="article-list">
			<div class="container-fluid">
				<div class="row">
					{% for entry in entries.all() %}
						<div class="col-md-6">
							<article class="article" data-aos="fade-up" data-aos-delay="200">
								<div class="article__content">
									<a href="{{ entry.url }}">
										{% for image in entry.imageNews.all() %}
											<img src="{{ image.getUrl('col6') }}" alt="{{ image.title }}">
										{% endfor %}
										<div class="article__title">
											<time class="l-title" datetime="{{ entry.postDate | date('Y-m-d') }}">{{ entry.postDate | date('d M Y') }}</time>
											<h2>{{ entry.title }}</h2>
										</div>
									</a>
								</div>
							</article>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</section>

{% endblock %}

